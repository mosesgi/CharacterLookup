@model CharacterLookupMVC.Models.Word

@{
    ViewData["Title"] = "Details";
}

<div>
    @{
        if (Model == null)
        {
            <dl class="row">
                <dt>貌似超纲了，小学字库未找到此字</dt>
            </dl>
        }
        else
        {
            <h4>生字详情</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Character)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Character)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Grade)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.GradeStr)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Semister)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.SemisterStr)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Article)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Article)
                </dd>
            </dl>
        }
    }
</div>
<div>
    @*@Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
